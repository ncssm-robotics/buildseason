{
  "name": "@buildseason/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.tsx",
  "types": "./src/index.tsx",
  "exports": {
    ".": "./src/index.tsx",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "dev": "turso dev --db-file ../../local.db & sleep 1 && bun run --env-file ../../.env --hot src/index.tsx",
    "dev:app": "bun run --env-file ../../.env --hot src/index.tsx",
    "start": "bun run --env-file ../../.env src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:unit": "bun test src/__tests__/unit",
    "test:integration": "bun test src/__tests__/integration",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@libsql/client": "^0.14.0",
    "better-auth": "^1.1.14",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bun": "^1.1.14",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  }
}
