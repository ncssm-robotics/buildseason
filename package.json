{
  "name": "buildseason",
  "version": "0.1.0",
  "private": true,
  "description": "Open-source team management platform for FTC robotics teams",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:api": "bun run --filter @buildseason/api dev",
    "dev:web": "bun run --filter @buildseason/web dev",
    "dev:db": "turso dev --db-file local.db",
    "build": "bun run --filter '*' build",
    "build:all": "bun run build && bun run typecheck",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test",
    "test:api": "bun run --filter @buildseason/api test",
    "test:web": "bun --filter @buildseason/web test:run",
    "db:generate": "bun run --filter @buildseason/api db:generate",
    "db:migrate": "bun run --filter @buildseason/api db:migrate",
    "db:push": "bun run --filter @buildseason/api db:push",
    "db:studio": "bun run --filter @buildseason/api db:studio",
    "db:seed": "bun run --filter @buildseason/api db:seed",
    "lint": "bun run --filter '*' lint",
    "lint:fix": "bun run --filter '*' lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,yml,yaml}": ["prettier --write"]
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/caryden/buildseason"
  },
  "keywords": ["ftc", "robotics", "team-management", "inventory", "orders"]
}
