{
  "permissions": {
    "allow": [
      "mcp__playwright__*",
      "mcp__context7__*",
      "Bash(bd:*)",
      "Bash(bun:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rm -rf:*)",
      "Bash(git:*)",
      "Bash(npx:*)",
      "Bash(bunx:*)",
      "Bash(cp:*)",
      "Bash(ls:*)",
      "Bash(pkill:*)",
      "Bash(lsof:*)",
      "Bash(curl:*)",
      "Bash(timeout:*)",
      "Bash(docker:*)",
      "Bash(fly:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(xargs:*)",
      "KillShell:*",
      "Skill(beads:*)",
      "Skill(frontend-design:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": false,
    "frontend-design@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "beads@beads-marketplace": true
  }
}
